// example.ts

// Define an interface for a User
interface User {
    id: number;
    name: string;
    email: string;
}

// Create a function to greet a user
function greetUser(user: User): string {
    return `Hello, ${user.name}!`;
}

// Example usage
const user: User = {
    id: 1,
    name: "John Doe",
    email: "john.doe@example.com"
};

console.log(greetUser(user));